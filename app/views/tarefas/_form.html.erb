<div class="container-fluid">
    <%= form_with(model: tarefa) do |f| %>
        <div class="row mt-2">
            <div class="col-12 mt-2">
                <%= f.label :titulo, class: 'form-label' %>
                <%= f.text_field :titulo, class: 'form-control', disabled: desativo %>
            </div>
            <div class="col-12 mt-2">
                <%= f.label :descricao, class: 'form-label' %>
                <%= f.text_field :descricao, class: 'form-control', disabled: desativo %>
            </div>
            <div class="col-12 mt-2">
                <%= f.check_box :concluida, class: 'form-check-input', disabled: desativo %>
                <%= f.label :concluida, class: 'form-check-label' %>
            </div>
            <div class="col-6 mt-2 text-center">
                <% if desativo %>
                    <%= link_to "Editar", edit_tarefa_path, class: 'btn btn-outline-warning w-100' %>
                <% else %>
                    <%= f.submit "Salvar", class: 'btn btn-primary w-100' %>
                <% end %>
            </div>
            <div class="col-6 mt-2 text-center">
                <% if desativo %>
                    <%= link_to "Excluir", tarefa_path(tarefa), class: 'btn btn-outline-danger w-100', data: { turbo_method: :delete } %>
                <% else %>
                    <%= link_to "Cancelar", tarefas_path, class: 'btn btn-outline-danger w-100' %>
                <% end %>
            </div>
        </div>
    <% end %>
    <%= link_to('Voltar', tarefas_path, class: 'nav-link text-center text-decoration-underline p-2 mt-4') if desativo %>
</div>